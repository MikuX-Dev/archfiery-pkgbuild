	"bluez-cups"
	"cups"
	"cups-filters"
	"cups-pdf"
	"cups-pk-helper"
	"foomatic-db"
	"foomatic-db-engine"
	"foomatic-db-gutenprint-ppds"
	"foomatic-db-nonfree"
	"foomatic-db-nonfree-ppds"
	"foomatic-db-ppds"
	"ghostscript"
	"gsfonts"
	"gutenprint"
	"noto-color-emoji-fontconfig"
	"splix")
optdepends=('system-config-printer: A GTK GUI for printer'
	'hplip: HP printer driver'
	'print-manager: A KDE tool for managing print jobs and printers')
install=$pkgname.install
